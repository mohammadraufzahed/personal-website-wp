{% set portfolio = portfolios[0] %}

<div class="w-full h-max bg-primary-2">
    <div
            class="max-w-[1440px] mx-auto  px-4 py-10 lg:py-[80px] lg:px-20 flex flex-col xl:flex-row gap-10 items-center justify-center"
    >

        <div class="w-full flex flex-col items-center justify-center gap-6 xl:items-start">
            <div class="max-lg:w-full font-viga max-lg:text-center flex flex-col gap-4">
                <h3 class="text-base sm:text-2xl md:text-3xl lg:text-4xl">I'm Mohammad</h3>
                <h2 class="text-base sm:text-2xl md:text-3xl lg:text-4xl lg:max-w-[539px]">Talented Full-Stack Developer
                    Hailing From
                    Tehran</h2>
                <p class="w-full max-w-[80%] lg:max-w-[539px] max-lg:mx-auto font-inter text-sm sm:text-base md:text-lg lg:text-2xl text-center lg:text-left mt-2">
                    Lorem
                    ipsum
                    dolor sit
                    amet
                    consectetur.
                    Pretium fames dolor
                    adipiscing eros
                    curabitur velit tellus vel. Justo massa gravida urna dolor rhoncus ut. Euismod scelerisque ac
                    facilisis
                    at purus gravida.</p>
            </div>
            <div class="relative z-20 max-lg:mt-[51px]">
                <div class="w-full h-max bg-primary-3 max-w-[256px] lg:max-w-[410px]"
                     style="clip-path: polygon(100% 0%, 96% 56%, 99% 98%, 51% 94%, 0% 100%, 0% 0%);"
                >
                    <img class="w-full aspect-auto" src="{{ template_uri }}/static/avatar.png" alt="Avatar"/>

                </div>
                <div class="w-max absolute -top-7 max-lg:inset-x-0 lg:top-[45px] lg:-right-[45px] max-lg:mx-auto">
                    <button class="relative font-walter-turncoat text-2xl py-2 px-8 bg-primary-4 rounded-2xl z-10">
                        Hire Me
                    </button>
                    <div class="absolute w-full h-full right-1 top-1 border-black border-[1px] rounded-2xl z-0 lg:hidden"></div>
                </div>
            </div>
        </div>

        <div>
            <div class="relative w-11/12 min-[493px]:w-full max-w-[400px] md:max-w-[450px] xl:max-w-[569px] xl:min-w-[569px] h-max flex flex-col items-end min-[493px]:mx-auto">
                <img class="relative z-10 w-10/12 aspect-square"
                     style="clip-path: polygon(0% 0%, 48% 5%, 100% 0%, 94% 56%, 100% 100%, 50% 95%, 0% 100%, 6% 52%);"
                     src="{{ portfolio.thumbnail }}" alt="{{ portfolio.title }}">
                <img class="w-7/12 absolute -left-[10%] bottom-[5%]" src="{{ template_uri }}/static/star.svg"
                     alt="star">
            </div>
            <div class="w-full h-max flex flex-row flex-wrap items-center justify-between mt-6 lg:mt-11 lg:gap-11">
                <div class="w-max md:w-full flex flex-col items-start justify-start gap-1.5 font-inter">
                    <span class="font-normal text-black text-sm lg:text-2xl">Latest Project</span>
                    <span class="font-bold lg:text-4xl">{{ portfolio.title }}</span>
                </div>
                <a href="#" class="font-inter text-sm lg:text-lg flex flex-row items-center justify-center gap-2">
                    <span>
                        Preview
                    </span>
                    <svg width="31" height="13" viewBox="0 0 31 13" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect x="19" y="6.5" width="8" height="8" transform="rotate(-45 19 6.5)" fill="#FBDE4D"/>
                        <path d="M26.8868 6.34314L24 3.45639L21.1132 6.34314L24 9.22989L26.8868 6.34314ZM0 6.84314L24 6.84314V5.84314L0 5.84314L0 6.84314Z"
                              fill="black"/>
                    </svg>

                </a>
                <a class="w-full md:w-6/12 max-lg:mt-10" href="{{ portfolio.link }}">
                    <button
                            class="w-full bg-black hover:bg-black/85 text-primary-2 py-1.5 font-inter font-bold rounded-2xl transition-all duration-150
    lg:bg-transparent lg:border-black lg:border-2 lg:text-black
"
                    >See Portfolio
                    </button>
                </a>
            </div>
        </div>
    </div>

</div>
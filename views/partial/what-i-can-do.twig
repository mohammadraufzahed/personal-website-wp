                 fill="none" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" clip-rule="evenodd"
                      d="M56.0048 1.60095C56.0821 22.8867 48.8294 61.39 104.621 70.6963C69.9874 75.6858 56.7525 102.405 56.0113 136.677C55.162 110.807 58.7169 80.9352 1.89941 72.7474C56.4314 68.4438 55.675 23.4757 56.0048 1.60095Z"
                      fill="#A78BFF" stroke="black" stroke-width="2.30485" stroke-miterlimit="1.5"
                      stroke-linecap="round" stroke-linejoin="round"/>
            </svg>

        </div>
        <div class="max-lg:w-full h-max flex flex-col items-center justify-center">
            {% for service in services %}
                <section
                        class="group relative w-full max-w-[640px] h-max flex flex-col items-start justify-start gap-2 py-4 lg:py-10 border-b-[3px] border-b-[var(--primary-color)] transition-colors duration-150 cursor-pointer
                        lg:border-b-black lg:hover:border-b-[var(--primary-color)]"
                        style="--primary-color: {{ service.color }}">
                    <h2 class="relative font-viga text-base sm:text-lg md:text-xl lg:text-3xl z-10">{{ service.number }}
                        . {{ service.title }}</h2>
                    <p class="relative font-inter text-sm sm:text-base md:text-lg lg:text-2xl text-[#5C5C5C] z-10">{{ service.description }}</p>
                    <div class="w-[46px] h-[18px] lg:w-[92px] lg:h-[36px] rounded-2xl bg-[var(--primary-color)] absolute top-5 lg:top-10 left-2
transition-all duration-200 lg:opacity-0 lg:group-hover:opacity-100
"></div>
                </section>
            {% endfor %}
        </div>
    </div>
</div>